{
  "name": "socket-chat-server",
  "version": "1.0.0",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "postman": {
    "request": {
      "url": "http://localhost:5000/api/auth/login",
      "method": "POST",
      "header": {
        "Content-Type": "application/json"
      },
      "body": {
        "username": "testuser"
      }
    }
  },
  "api": {
    "messages": {
      "url": "http://localhost:5000/api/messages",
      "method": "GET",
      "query": {
        "room": "global"
      },
      "header": {
        "Authorization": "Bearer {your_jwt_token}"
      }
    }
  }
}